{% extends 'base.html.twig' %}

{% block title %}
	{{ parent() }}
	Statistiques
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<div
			class="row justify-content-center">
			<!-- Section Statistiques générales -->
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary mb-4">
				<h2 class="text-center text-secondary mb-3">Statistiques générales</h2>
				<div id="user-stats">
					<p>Chargement des statistiques...</p>
				</div>
			</div>

			<div class="container-fluid">
            <h3 class="text-center text-secondary mb-3">Connexions sur les 31 derniers jours</h3>
				<div class="row justify-content-center">
					<div
						class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
						<!-- Conteneur pour le graphique -->
						<canvas id="connexion-graph" width="400" height="200"></canvas>
					</div>
				</div>
			</div>

			<!-- Intégration des scripts -->
			{{ encore_entry_script_tags('statinscrits') }}
			{{ encore_entry_script_tags('jourconnexion') }}
		{% endblock %}