{% extends 'base.html.twig' %}
{% block title %}
	{{ parent() }}Liste utilisateurs
{% endblock %}

{% block body %}
	<div class="container-fluid">
		<h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">
			Liste des utilisateurs</h1>
		<div class="row justify-content-center">
			<div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
				<div class="table-responsive">
					<table class="table table-hover">
						<thead>
							<tr class="fw-bold text-primary">
								<th scope="col">Email</th>
								<th scope="col">Date d'inscription</th>
								<th scope="col">Nombre de fichiers upload</th>
								<th scope="col">Roles</th>
								<th scope="col">Actions</th> <!-- Colonne pour les actions -->
							</tr>
						</thead>
						<tbody>
							{% for user in users|sort((a, b) => b.dateEnvoi <=> a.dateEnvoi) %}
								<tr class="{{ cycle(['table-primary', 'table-secondary'], loop.index0) }}">
									<td>{{ user.email | capitalize }}</td>
									<td>{{ user.dateEnvoi | date("d-m-Y à H:i:s") }}</td>
									<td>{{ user.fichiers | length }}</td>
									<td>
										{% if 'ROLE_MOD' in user.roles %}
											Modérateur
										{% else %}
											Utilisateur normal
										{% endif %}
									</td>
									<td>
										<!-- Bouton de suppression -->
										<form action="{{ path('user_delete', { 'id': user.id }) }}" method="post" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
											<button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
										</form>
									</td>
								</tr>
							{% endfor %}
						</tbody>
					</table>
				</div>
			</div>
		</div>
	</div>
{% endblock %}
