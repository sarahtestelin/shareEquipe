{% extends 'base.html.twig' %}

{% block title %}
    {{ parent() }}
    Les amis
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        /* Styles personnalisés pour le formulaire */
        #ajout_ami_email {
            width: 100%;
        }
        .form-container {
            max-width: 500px; /* Ajustez la largeur maximale selon vos besoins */
            margin: 0 auto; /* Centre le conteneur horizontalement */
        }
        .submit-center {
            display: flex;
            justify-content: center;
            margin-top: 1rem;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container-fluid">
        <h1 class="text-center text-primary mt-4 pt-4 fw-bold">Les amis</h1>
        <div class="row justify-content-center">

            <!-- Formulaire pour ajouter un ami -->
            <div class="col-12 col-md-12 bg-white p-4 m-0 text-primary">
                <div class="form-container">
                    {{ form_start(form) }}
                        <div class="form-group mb-3">
                            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Saisir l\'email de la personne que vous souhaitez inviter'}}) }}
                            {{ form_errors(form.email) }}
                        </div>
                        <div class="submit-center">
                            {{ form_widget(form.submit, {'attr': {'class': 'btn btn-primary'}}) }}
                        </div>
                    {{ form_end(form) }}
                </div>
            </div>

            <!-- Invitations reçues -->
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-primary text-center" style="border-right: 2px solid #158cba;">
                <span class="fw-bold text-center">Reçues</span>
                {% if app.user.usersDemande | length > 0 %}
                    {% for d in app.user.usersDemande %}
                        <div class="list-group m-2">
                            <div class="list-group-item list-group-item-action bg-secondary" aria-current="true">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1 text-primary">{{ d.email }}</h5>
                                    <a href="{{ path('app_amis', {'idRefuser': d.id}) }}" class="btn btn-danger btn-sm" tabindex="-1" role="button">Refuser</a>
                                    <a href="{{ path('app_amis', {'idAccepter': d.id}) }}" class="btn btn-success btn-sm" tabindex="-1" role="button">Accepter</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucune demande reçue pour le moment.</p>
                {% endif %}
            </div>
            <div class="col-12 col-md-6 bg-white p-4 m-0 text-primary text-center">
                <span class="fw-bold text-center m-4 p-4">Envoyées</span>
                {% if app.user.demander | length > 0 %}
                    {% for d in app.user.demander %}
                        <div class="list-group m-2">
                            <div class="list-group-item list-group-item-action bg-secondary" aria-current="true">
                                <div class="d-flex w-100 justify-content-between">
                                    <h5 class="mb-1 text-primary">{{ d.email }}</h5>
                                    <a href="{{ path('app_amis', {'id': d.id}) }}" class="btn btn-warning btn-sm" tabindex="-1" role="button">Annuler</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Aucune demande envoyée pour le moment.</p>
                {% endif %}
            </div>

            <!--permet d'afficher la liste des amis avec une boucle dans le template avec une condition de si l'user a accepté la demande-->
            <div class="col-12 col-md-12 bg-white p-4 m-0 text-primary text-center">
                <h2 class="fw-bold text-center m-4 p-4">Vos amis</h2>
                {% if app.user.accepter | length > 0 %}
                    {% for a in app.user.accepter %}
                        <div class="list-group m-2">
                            <div class="list-group-item list-group-item-action bg-secondary" aria-current="true">
                                <div class="d-flex w-100 justify-content-between">
                                    <span class="mb-1 text-primary">{{ a.nom | upper }} {{ a.prenom | capitalize }}</span>
                                    <div>
                                        <a href="{{ path('app_supprimer_ami', {'id': a.id}) }}" 
                                           class="btn btn-danger btn-sm" 
                                           tabindex="-1" role="button">Supprimer</a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% else %}
                    <p>Vous n'avez aucun ami pour le moment.</p>
                {% endif %}
            </div>

        </div>
    </div>
{% endblock %}
