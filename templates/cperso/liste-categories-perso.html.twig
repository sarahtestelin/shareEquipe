{% extends 'base.html.twig' %} {% block title %}{{ parent() }}Catégories personnalisées{% endblock
%} {% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 text-primary">
            <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Liste des catégories personnalisées</h1>

            <div class="row justify-content-center">
                <div class="col-12 col-md-8 bg-white p-4 m-0 text-primary">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr class="fw-bold text-primary">
                                    <th scope="col">Libellé</th>
                                    <th scope="col">Date d'envoi</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if app.user is not null %}
                                {% for categorie_perso in app.user.categoriePersos %}
                                <tr class="{{ cycle(['table-primary',
                'table-secondary'], loop.index0) }}">
                                    <td>{{ categorie_perso.libelle | capitalize }}</td>
                                    <td>
                                        {{ categorie_perso.dateEnvoi |date("d-m-Y à H:i:s") }}
                                    </td>
                                    <td>
                                        <div class="d-flex gap-2">
                                            <a href="{{ path('app_modifier_categorieperso', {'id': categorie_perso.id}) }}"
                                                title="Modifier la catégorie">
                                                <i class="bi bi-pen-fill text-dark"></i>
                                            </a>
                                            <a href="{{ path('app_supprimer_categorieperso', {'id': categorie_perso.id}) }}"
                                                title="Supprimer la catégorie">
                                                <i class="bi bi-trash-fill text-danger"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                {% endfor %}
                                {% endif %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}