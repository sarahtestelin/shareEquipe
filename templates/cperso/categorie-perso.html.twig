{% extends 'base.html.twig' %} {% block title %}{{ parent() }}Catégories personnalisées{% endblock
%} {% block body %}
<div class="container-fluid">
    <div class="row justify-content-center">
        <div class="col-10 text-primary">
            <h1 class="text-center text-primary mt-4 pt-4 display-1 fw-bold">Ajout de catégories personnalisées</h1>
            {% for message in app.flashes('success') %}
            <h2 class="alert alert-success text-center mt-4 mb-4" role="alert">
                {{ message }} Retrouvez la dans votre liste de catégories <a class="dropdown-item"
                    href="{{ path('app_liste_categories_perso') }}"><u>en cliquant ici</u>.</a>
            </h2>
            {% endfor %}

            {{form(form)}}
        </div>
    </div>
</div>
{% endblock %}