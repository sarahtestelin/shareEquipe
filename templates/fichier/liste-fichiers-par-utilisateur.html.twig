{% extends 'base.html.twig' %}

{% block title %}
    {{parent()}} Liste des fichiers par utilisateur
{% endblock %}

{% block body %}
    <div class="container my-5">
        <h1 class="text-center text-primary mt-4 pt-4 fw-bold">
            Liste des fichiers par utilisateur
        </h1>
        <div class="row justify-content-center">
            <div class="col-12 col-md-10 bg-white p-5 shadow-lg rounded">
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        {% for u in users %}
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th class="text-center">{{ u.nom | upper }} {{ u.prenom | capitalize }}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% if u.fichiers | length > 0 %}
                                    {% for f in u.fichiers %}
                                        <tr>
                                            <td class="p-3">
                                                <fieldset class="border p-2">
                                                    <legend class="w-auto">
                                                        <i class="bi bi-filetype-pdf me-2 text-danger"></i>
                                                        {{ f.nomOriginal }}
                                                    </legend>
                                                    <ul class="ps-3 mb-0" style="list-style: none;">
                                                        {% for s in f.scategories %}
                                                            <li><strong>{{ s.numero }}</strong> - {{ s.libelle | capitalize }}</li>
                                                        {% endfor %}
                                                    </ul>
                                                </fieldset>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                {% else %}
                                    <tr>
                                        <td class="text-center text-muted">Aucun fichier disponible</td>
                                    </tr>
                                {% endif %}
                            </tbody>
                        {% endfor %}
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
